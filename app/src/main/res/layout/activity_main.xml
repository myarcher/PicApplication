<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/sele_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="选择图片"
            android:textColor="#232323"
            android:textSize="18dp"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/values_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外界光强:"
            android:textColor="#232323"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/values1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="0"
            android:textColor="#232323"
            android:textSize="20dp"/>
    </LinearLayout>
       
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/values_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屏幕亮度:"
                android:textColor="#232323"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/values2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="0"
                android:textColor="#232323"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/values_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片编号:"
                android:textColor="#232323"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/values3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="0"
                android:textColor="#232323"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bnt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="满意"
                android:textColor="#232323"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/bnt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="一般"
                android:textColor="#232323"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/bnt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="不满意"
                android:textColor="#232323"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/values_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="亮度"
                android:textColor="#232323"
                android:textSize="20dp"/>
            <SeekBar
                android:id="@+id/seekBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:paddingLeft="6dp"
                android:max="255"
                android:paddingRight="16dp"
                android:progressDrawable="@drawable/mn_player_progress_diy"
                android:thumb="@drawable/mn_player_thumb"
                android:thumbOffset="6dp"/>
          
        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bnt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存数据"
            android:textColor="#232323"
            android:textSize="20dp"/>
    </LinearLayout>
</RelativeLayout>
